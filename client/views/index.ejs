<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Index</title>
    </head>
    <body>
        <h1>Index Page!</h1>
        <a href="/new">Create new dog</a>
        <!-- Display all dogs -->
        <% for(const dog in dogs) { %>
            <p>Name: <a href="/<%= dog._id %>"><%= dog.name %></a>
                <a href="/<%= dog._id %>"><%= dog.name %></a>
                <form action="<%= dog._id %>/delete" method="post">
                    <input type="submit" value="Delete" />
                </form>
            </p>
        <% } %>
    </body>
</html>
